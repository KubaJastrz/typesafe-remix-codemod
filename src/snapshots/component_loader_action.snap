import { useActionData, useLoaderData } from "@remix-run/react";







export default defineRoute({
  loader() {
    return { loader: "hello" };
  },
  action() {
    return { action: "world" };
  },
  Component() {
    const loaderData = useActionData();
    const actionData = useActionData();
    return <h1>{loaderData.loader} {actionData.action}</h1>;
  },
});
